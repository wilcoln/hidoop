cmd=$1
case $cmd in
        'run')
            java application.$2 $3
            ;;
        'show-configs')
            java config.ConfigPrinter
            ;;
        'write')
            java hdfs.HdfsClient write $2
           ;;
        'read')
           # ne marche pas
           java hdfs.HdfsClient read $2 $3
           ;;
        'delete')
            java hdfs.HdfsClient delete $2
           ;;
        'ls')
            java hdfs.HdfsClient ls $2
           ;;
        *)
          echo "Usage : hidoop <COMMAND> [OPTIONS...]"
          exit
            ;;
        esac