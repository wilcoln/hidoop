<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Ici on précise les configurations liées à hdfs -->

<configuration>
    <property>
        <name>rep-factor</name>
        <value>1</value>
        <description></description>
    </property>
    <property>
        <name>bloc-size</name>
        <value>100000</value>
        <description></description>
    </property>
    <property>
        <name>tmp-path</name>
        <value>/tmp/hidoop</value>
        <description></description>
    </property>
    <property>
        <name>storage-path</name>
        <value>storage</value>
        <description>Chemin relatif du dossier de stockage par rapport à HIDOOP_HOME</description>
    </property>
    <property>
        <name>datanode-port</name>
        <value>3333</value>
        <description></description>
    </property>
</configuration>
